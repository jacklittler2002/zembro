generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String            @id
  email            String            @unique
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  aiFeedbacks      AIFeedback[]
  aiCreditWallets  AiCreditWallet?
  apiKeys          ApiKey[]
  auditLogs        AuditLog[]
  billingCustomer  BillingCustomer?
  campaigns        Campaign[]
  creditTransactions CreditTransaction[]
  emailAccounts    EmailAccount[]
  fileUploads      FileUpload[]
  integrations     Integration[]
  leadExports      LeadExport[]
  leadLists        LeadList[]
  leadSearches     LeadSearch[]
  lists            List[]
  notifications    Notification[]
  subscriptions    Subscription[]
  tedConversations TedConversation[]
  preferences      UserPreferences?
  sessions         UserSession[]
}

model Company {
  id                 String          @id @default(cuid())
  name               String
  domain             String?         @unique
  websiteUrl         String?
  country            String?
  city               String?
  street             String?
  postalCode         String?
  phone              String?
  source             String
  category           String?
  niche              String?
  tags               String[]        @default([])
  aiConfidence       Float?
  lastSeenAt         DateTime?
  lastCrawledAt      DateTime?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  rawContent         String?
  addressRaw         String?
  businessType       String?
  facebookUrl        String?
  hqCity             String?
  hqCountry          String?
  idealCustomerNotes String?
  industry           String?
  instagramUrl       String?
  keywords           String[]        @default([])
  linkedinUrl        String?
  sizeBucket         CompanySize?
  twitterUrl         String?
  isArchived         Boolean         @default(false)
  isFavorited        Boolean         @default(false)
  notes              String?
  aiFeedbacks        AIFeedback[]
  campaignEmails     CampaignEmail[]
  contacts           Contact[]
  crawlJobs          CrawlJob[]
  leadExports        LeadExport[]
  leadListItems      LeadListItem[]
  listLeads          ListLead[]
  leadSearches       LeadSearch[]    @relation("SearchCompanies")
}

model Contact {
  id                    String          @id @default(cuid())
  email                 String
  firstName             String?
  lastName              String?
  role                  String?
  linkedinUrl           String?
  source                String
  companyId             String
  leadKey               String?         // Deterministic key for deduplication and charging
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  isLikelyDecisionMaker Boolean         @default(false)
  aiFeedbacks           AIFeedback[]
  campaignEmails        CampaignEmail[]
  company               Company         @relation(fields: [companyId], references: [id])
  leadExports           LeadExport[]
  leadListItems         LeadListItem[]
  listLeads             ListLead[]

  @@unique([email, companyId])
  @@index([leadKey])
}

model LeadSearch {
  id                 String           @id @default(cuid())
  query              String
  niche              String?
  location           String?
  maxLeads           Int              @default(100)
  status             LeadSearchStatus @default(PENDING)
  errorMessage       String?
  filters            Json?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  userId             String
  contactsFoundCount Int              @default(0)
  crawledCount       Int              @default(0)
  discoveredCount    Int              @default(0)
  enrichedCount      Int              @default(0)
  creditsCharged     Int              @default(0) // Net-new leads that were charged for
  totalFound         Int              @default(0) // Total leads found before deduplication
  totalDeduped       Int              @default(0) // Leads removed due to duplication
  totalNetNew        Int              @default(0) // Net-new unique leads delivered
  aiFeedbacks        AIFeedback[]
  campaigns          Campaign[]
  crawlJobs          CrawlJob[]
  leadExports        LeadExport[]
  creditTransactions CreditTransaction[] // Link to credit charges for this search
  user               User             @relation(fields: [userId], references: [id])
  companies          Company[]        @relation("SearchCompanies")

  @@index([userId])
}

model CrawlJob {
  id           String         @id @default(cuid())
  type         CrawlJobType
  status       CrawlJobStatus @default(PENDING)
  targetUrl    String?
  attempts     Int            @default(0)
  lastError    String?
  scheduledAt  DateTime?
  startedAt    DateTime?
  finishedAt   DateTime?
  priority     Int            @default(0)
  companyId    String?
  leadSearchId String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  company      Company?       @relation(fields: [companyId], references: [id])
  leadSearch   LeadSearch?    @relation(fields: [leadSearchId], references: [id])
}

model AiCreditWallet {
  id           String                @id @default(cuid())
  userId       String                @unique
  balance      Int                   @default(0)
  lastTopupAt  DateTime?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  transactions AiCreditTransaction[]
  user         User                  @relation(fields: [userId], references: [id])

  @@index([userId])
}

model AiCreditTransaction {
  id        String         @id @default(cuid())
  walletId  String
  change    Int
  reason    String
  metadata  Json?
  createdAt DateTime       @default(now())
  wallet    AiCreditWallet @relation(fields: [walletId], references: [id])

  @@index([walletId])
}

model CreditTransaction {
  id           String     @id @default(cuid())
  userId       String
  leadSearchId String
  creditsDelta Int        // Negative for charges, positive for refunds
  reason       String     // "lead_delivered", "refund", etc.
  leadKey      String     // Deterministic key of the lead that was charged for
  createdAt    DateTime   @default(now())
  leadSearch   LeadSearch @relation(fields: [leadSearchId], references: [id])
  user         User       @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([leadSearchId])
  @@index([leadKey])
}

model TedConversation {
  id        String       @id @default(cuid())
  userId    String
  title     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  user      User         @relation(fields: [userId], references: [id])
  messages  TedMessage[]

  @@index([userId])
}

model TedMessage {
  id             String          @id @default(cuid())
  conversationId String
  role           TedMessageRole
  content        String
  createdAt      DateTime        @default(now())
  conversation   TedConversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}

model AIFeedback {
  id           String      @id @default(cuid())
  userId       String
  companyId    String
  contactId    String?
  leadSearchId String?
  rating       Int
  feedback     String?
  aiScore      Float?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  company      Company     @relation(fields: [companyId], references: [id])
  contact      Contact?    @relation(fields: [contactId], references: [id])
  leadSearch   LeadSearch? @relation(fields: [leadSearchId], references: [id])
  user         User        @relation(fields: [userId], references: [id])

  @@unique([userId, companyId, contactId, leadSearchId])
  @@index([userId])
  @@index([companyId])
  @@index([contactId])
  @@index([leadSearchId])
}

model BillingCustomer {
  id               String   @id @default(cuid())
  userId           String   @unique
  stripeCustomerId String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id])
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String
  stripeSubscriptionId String    @unique
  planCode             String
  status               String
  currentPeriodEnd     DateTime
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  hasUsedTrial         Boolean   @default(false)
  trialEnd             DateTime?
  trialStart           DateTime?
  user                 User      @relation(fields: [userId], references: [id])

  @@index([userId])
}

model LeadExport {
  id           String      @id @default(cuid())
  userId       String
  companyId    String
  contactId    String?
  leadSearchId String?
  exportedAt   DateTime    @default(now())
  company      Company     @relation(fields: [companyId], references: [id])
  contact      Contact?    @relation(fields: [contactId], references: [id])
  leadSearch   LeadSearch? @relation(fields: [leadSearchId], references: [id])
  user         User        @relation(fields: [userId], references: [id])

  @@unique([userId, companyId, contactId])
  @@index([userId])
  @@index([companyId])
}

model List {
  id          String     @id @default(cuid())
  userId      String
  name        String
  description String?
  color       String?
  leadCount   Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  campaigns   Campaign[]
  user        User       @relation(fields: [userId], references: [id])
  leads       ListLead[]

  @@index([userId])
}

model ListLead {
  id        String   @id @default(cuid())
  listId    String
  companyId String
  contactId String?
  addedBy   String
  notes     String?
  addedAt   DateTime @default(now())
  company   Company  @relation(fields: [companyId], references: [id])
  contact   Contact? @relation(fields: [contactId], references: [id])
  list      List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@unique([listId, companyId, contactId])
  @@index([listId])
  @@index([companyId])
}

model LeadList {
  id          String         @id @default(cuid())
  userId      String
  name        String
  description String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  user        User           @relation(fields: [userId], references: [id])
  items       LeadListItem[]

  @@unique([userId, name])
  @@index([userId])
}

model LeadListItem {
  id          String       @id @default(cuid())
  leadListId  String
  companyId   String
  contactId   String?
  email       String?
  firstName   String?
  lastName    String?
  role        String?
  companyName String
  websiteUrl  String?
  country     String?
  city        String?
  industry    String?
  sizeBucket  CompanySize?
  score       Int?
  createdAt   DateTime     @default(now())
  company     Company      @relation(fields: [companyId], references: [id])
  contact     Contact?     @relation(fields: [contactId], references: [id])
  leadList    LeadList     @relation(fields: [leadListId], references: [id])

  @@index([leadListId])
  @@index([companyId])
  @@index([contactId])
}

model EmailAccount {
  id                 String                 @id @default(cuid())
  userId             String
  email              String                 @unique
  provider           String
  fromName           String?
  smtpHost           String
  smtpPort           Int
  smtpUsername       String
  smtpPassword       String
  smtpSecure         Boolean                @default(true)
  imapHost           String?
  imapPort           Int?
  imapUsername       String?
  imapPassword       String?
  status             EmailAccountStatus     @default(PENDING_VERIFICATION)
  dailySendLimit     Int                    @default(50)
  dailySentCount     Int                    @default(0)
  lastSentAt         DateTime?
  lastResetAt        DateTime               @default(now())
  warmupEnabled      Boolean                @default(false)
  warmupStage        Int                    @default(0)
  warmupStartedAt    DateTime?
  bounceRate         Float                  @default(0)
  replyRate          Float                  @default(0)
  openRate           Float                  @default(0)
  totalSent          Int                    @default(0)
  totalBounced       Int                    @default(0)
  totalReplied       Int                    @default(0)
  instantlyAccountId String?
  createdAt          DateTime               @default(now())
  updatedAt          DateTime               @updatedAt
  sentEmails         CampaignEmail[]
  campaigns          CampaignEmailAccount[]
  user               User                   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
}

model Campaign {
  id                 String                 @id @default(cuid())
  userId             String
  name               String
  status             CampaignStatus         @default(DRAFT)
  leadSearchId       String?
  scheduleStartAt    DateTime?
  scheduleEndAt      DateTime?
  sendTimeStart      String?
  sendTimeEnd        String?
  timezone           String                 @default("UTC")
  dailyLimit         Int                    @default(100)
  totalLeads         Int                    @default(0)
  emailsQueued       Int                    @default(0)
  emailsSent         Int                    @default(0)
  emailsOpened       Int                    @default(0)
  emailsReplied      Int                    @default(0)
  emailsBounced      Int                    @default(0)
  createdAt          DateTime               @default(now())
  updatedAt          DateTime               @updatedAt
  emailsFailed       Int                    @default(0)
  emailsSentToday    Int                    @default(0)
  emailsUnsubscribed Int                    @default(0)
  lastResetAt        DateTime               @default(now())
  listId             String?
  leadSearch         LeadSearch?            @relation(fields: [leadSearchId], references: [id])
  list               List?                  @relation(fields: [listId], references: [id])
  user               User                   @relation(fields: [userId], references: [id])
  sentEmails         CampaignEmail[]
  emailAccounts      CampaignEmailAccount[]
  steps              CampaignStep[]

  @@index([userId])
  @@index([status])
}

model CampaignStep {
  id             String   @id @default(cuid())
  campaignId     String
  stepNumber     Int
  delayDays      Int
  subjectLine    String
  bodyTemplate   String
  variantSubject String?
  variantBody    String?
  variantPercent Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  campaign       Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([campaignId, stepNumber])
  @@index([campaignId])
}

model CampaignEmailAccount {
  id             String       @id @default(cuid())
  campaignId     String
  emailAccountId String
  addedAt        DateTime     @default(now())
  campaign       Campaign     @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  emailAccount   EmailAccount @relation(fields: [emailAccountId], references: [id], onDelete: Cascade)

  @@unique([campaignId, emailAccountId])
  @@index([campaignId])
  @@index([emailAccountId])
}

model CampaignEmail {
  id             String       @id @default(cuid())
  campaignId     String
  emailAccountId String
  recipientEmail String
  recipientName  String?
  companyId      String?
  contactId      String?
  stepNumber     Int
  isVariant      Boolean      @default(false)
  subject        String
  body           String
  status         EmailStatus  @default(QUEUED)
  scheduledFor   DateTime
  sentAt         DateTime?
  openedAt       DateTime?
  repliedAt      DateTime?
  bouncedAt      DateTime?
  errorMessage   String?
  retryCount     Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  bounceType     String?
  error          String?
  messageId      String?
  unsubscribedAt DateTime?
  campaign       Campaign     @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  company        Company?     @relation(fields: [companyId], references: [id])
  contact        Contact?     @relation(fields: [contactId], references: [id])
  emailAccount   EmailAccount @relation(fields: [emailAccountId], references: [id])

  @@index([campaignId])
  @@index([emailAccountId])
  @@index([status])
  @@index([scheduledFor])
}

model UserPreferences {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  emailNotifications      Boolean  @default(true)
  campaignNotifications   Boolean  @default(true)
  leadSearchNotifications Boolean  @default(true)
  theme                   String   @default("system")
  timezone                String   @default("UTC")
  dateFormat              String   @default("MM/DD/YYYY")
  currency                String   @default("USD")
  language                String   @default("en")
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  resource   String
  resourceId String?
  details    Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([resource])
  @@index([createdAt])
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  name        String
  key         String    @unique
  permissions Json      @default("[]")
  isActive    Boolean   @default(true)
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([key])
}

model UserSession {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionToken])
}

model FileUpload {
  id           String   @id @default(cuid())
  userId       String
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  bucket       String   @default("uploads")
  isPublic     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Integration {
  id         String          @id @default(cuid())
  userId     String
  type       IntegrationType
  name       String
  config     Json
  isActive   Boolean         @default(true)
  lastSyncAt DateTime?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
}

enum CrawlJobType {
  DISCOVERY
  SITE_CRAWL
  ENRICHMENT
}

enum CrawlJobStatus {
  PENDING
  RUNNING
  DONE
  FAILED
}

enum LeadSearchStatus {
  PENDING
  RUNNING
  DONE
  FAILED
}

enum TedMessageRole {
  user
  assistant
  system
}

enum CompanySize {
  MICRO
  SMALL
  SMB
  MIDMARKET
  ENTERPRISE
}

enum EmailAccountStatus {
  PENDING_VERIFICATION
  ACTIVE
  WARMING_UP
  PAUSED
  FAILED
  SUSPENDED
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  PAUSED
  COMPLETED
  FAILED
}

enum EmailStatus {
  QUEUED
  SCHEDULED
  SENDING
  SENT
  OPENED
  REPLIED
  BOUNCED
  FAILED
  UNSUBSCRIBED
}

enum NotificationType {
  CAMPAIGN_COMPLETED
  LEAD_SEARCH_COMPLETED
  CREDIT_LOW
  EMAIL_BOUNCED
  CAMPAIGN_ERROR
  SYSTEM_MAINTENANCE
  NEW_FEATURE
}

enum IntegrationType {
  ZAPIER
  MAKE
  WEBHOOK
  SLACK
  DISCORD
  GOOGLE_SHEETS
  HUBSPOT
  SALESFORCE
  PIPEDRIVE
  ZOHO
}
